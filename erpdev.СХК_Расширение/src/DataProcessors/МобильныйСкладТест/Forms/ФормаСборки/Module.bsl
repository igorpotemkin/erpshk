&НаСервере
Процедура ЗаполнитьИнформацию(НомСтроки,Док) 

	ЭтаФорма.ДокСборка = Док;
	ЭтаФорма.Собрано = 0;

	Отбор = Новый Структура;
	Отбор.Вставить("НомерСтроки",НомСтроки);
	
	ТТовары = Док.ДокОснования.ОтгружаемыеТовары.Выгрузить();
	Строки = ТТовары.НайтиСтроки(Отбор);
	
	Если Строки.Количество() >=1 Тогда 
		Если Строки[0].Действие <> Перечисления.ДействияСоСтрокамиОрдеровНаОтгрузку.НеОтгружать Тогда

			ОтборРасп = Новый Структура;
			ОтборРасп.Вставить("Номенклатура",Строки[0].Номенклатура);
			ОтборРасп.Вставить("Серия",Строки[0].Серия);
			ОтборРасп.Вставить("Упаковка",Строки[0].Упаковка);
			
			ТоварыРасп = Док.ТоварыПоРаспоряжениям.Выгрузить();
			СтрокиРасп = ТоварыРасп.НайтиСтроки(ОтборРасп);
			
			Если СтрокиРасп[0].Собран = Ложь Тогда
				ЭтаФорма.СтрокаДокумента = НомСтроки;
				ЭтаФорма.Номенклатура = СтрокиРасп[0].Номенклатура;
				ЭтаФорма.Серия = СтрокиРасп[0].Серия;
				ЭтаФорма.Количество = СтрокиРасп[0].Количество;
				ЭтаФорма.КоличествоУпаковок = СтрокиРасп[0].КоличествоУпаковок;
				ЭтаФорма.Упаковка = СтрокиРасп[0].Упаковка;

				Отбор = Новый Структура;
				Отбор.Вставить("НомерСтрокиТовара",НомСтроки);

				СобТовары = Док.СобранныеТовары.Выгрузить();
				СобСтроки = СобТовары.НайтиСтроки(Отбор);
				
				К = 0;
				Для сч=0 По СобСтроки.Количество()-1 Цикл
					К = К + СобСтроки[сч].Количество;
				КонецЦикла;

				ЭтаФорма.Собрано = К;
				
				Доступно.Параметры.УстановитьЗначениеПараметра("Номенклатура",СтрокиРасп[0].Номенклатура);
				Доступно.Параметры.УстановитьЗначениеПараметра("Серия",Строка(СтрокиРасп[0].Серия)); 
				
				Если Количество = Собрано Тогда
					ЭтаФорма.Элементы.ГруппаСборка.Видимость = Ложь;	
					ЭтаФорма.Элементы.ГруппаСообщение.Видимость = Истина;	
					ЭтаФорма.Элементы.Декорация1.Заголовок = Строка(СтрокиРасп[0].Номенклатура) + " собрана полностью";
				КонецЕсли;
				
			Иначе
				ЭтаФорма.Элементы.ГруппаСборка.Видимость = Ложь;	
				ЭтаФорма.Элементы.ГруппаСообщение.Видимость = Истина;	
				ЭтаФорма.Элементы.Декорация1.Заголовок = Строка(Строки[0].Номенклатура) + " собрана полностью";
				
			КонецЕсли;
		Иначе
				ЭтаФорма.Элементы.ГруппаСборка.Видимость = Ложь;	
				ЭтаФорма.Элементы.ГруппаСообщение.Видимость = Истина;	
				ЭтаФорма.Элементы.Декорация1.Заголовок = Строка(Строки[0].Номенклатура) + " данную позицию не отгружать";
			
		
	КонецЕсли;
	КонецЕсли;
	

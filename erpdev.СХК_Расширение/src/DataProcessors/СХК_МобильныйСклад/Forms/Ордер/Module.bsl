&НаСервере
Процедура ПриСозданииНаСервере(Отказ, СтандартнаяОбработка)   
	
	СтандартнаяОбработка = Ложь;
	СтруктураПараметров = ПолучитьИзВременногоХранилища(Параметры.Адрес);

	СХКСписание = Документы.СХК_СписаниеЯчейки.ПустаяСсылка();

	Если СтруктураПараметров.Ссылка <> "" Тогда
		СсылкаДок = СтруктураПараметров.Ссылка;
		ТЧТовары.Очистить();
		Списание = ПоискСХКСписание(СсылкаДок);
		Если Списание.Количество() = 0 Тогда
			Док = Документы.СХК_СписаниеЯчейки.СоздатьДокумент();
			Док.Дата = ТекущаяДата();
			Док.Склад = СсылкаДок.Склад;
			Док.ДокОснования = СсылкаДок;
			Док.Собран = Ложь;
		Иначе
			Док = Списание[0].Ссылка.ПолучитьОбъект();
		КонецЕсли;

		Если Док.Собран = Ложь Тогда
			Док.ТоварыПоРаспоряжениям.Очистить();
			Док.ТоварыПоРаспоряжениям.Загрузить(ЗаполнитьШКУпаковок(Док.ДокОснования));
		Иначе
			Элементы.ЗакрытьОрдер.Доступность = Истина;
			Сообщить("По данному ордеру все собрано !!!");
		КонецЕсли;
		
		Попытка
			Док.Записать(РежимЗаписиДокумента.Проведение);
			Д = Док;
			ЭтаФорма.СХКСписание = Д.Ссылка;
		Исключение
			Сообщить("Не удалось создать документ отгрузки");
			Отказ = Истина;
		КонецПопытки;
		
		ЭтаФорма.СписокТовары.Очистить();
		ЭтаФорма.СписокТовары.Загрузить(ЭтаФорма.СХКСписание.ТоварыПоРаспоряжениям.Выгрузить());

	Иначе
		Сообщить("Не удалось создать документ отгрузки");
	КонецЕсли;

	
КонецПроцедуры

// Заполняет штрих-коды упаковок для расходного ордера.
//
// Параметры:
//   СсылкаРО - ДокументСсылка.РасходныйОрдерНаТовары - ссылка на расходный ордер
//
// Возвращаемое значение:
//   ТаблицаЗначений - таблица со штрих-кодами упаковок

&НаСервере
Функция ЗаполнитьШКУпаковок(СсылкаРО)

	Запрос = Новый Запрос;
	Запрос.Текст = "ВЫБРАТЬ
	               |	РасходныйОрдерНаТоварыОтгружаемыеТовары.Номенклатура КАК Номенклатура,
	               |	РасходныйОрдерНаТоварыОтгружаемыеТовары.Серия КАК Серия,
	               |	РасходныйОрдерНаТоварыОтгружаемыеТовары.Упаковка КАК Упаковка,
	               |	СУММА(РасходныйОрдерНаТоварыОтгружаемыеТовары.КоличествоУпаковок) КАК КоличествоУпаковок,
	               |	ВЫБОР
	               |		КОГДА ШтрихкодыНоменклатуры.Штрихкод <> """"
	               |			ТОГДА ШтрихкодыНоменклатуры.Штрихкод
	               |		ИНАЧЕ РасходныйОрдерНаТоварыОтгружаемыеТовары.Номенклатура.Код
	               |	КОНЕЦ КАК ШКУпаковки,
	               |	СУММА(РасходныйОрдерНаТоварыОтгружаемыеТовары.Количество) КАК Количество
	               //|	РасходныйОрдерНаТоварыОтгружаемыеТовары.НомерСтроки КАК НомерСтроки
	               |ИЗ
	               |	Документ.РасходныйОрдерНаТовары.ОтгружаемыеТовары КАК РасходныйОрдерНаТоварыОтгружаемыеТовары
	               |		ЛЕВОЕ СОЕДИНЕНИЕ РегистрСведений.ШтрихкодыНоменклатуры КАК ШтрихкодыНоменклатуры
	               |		ПО РасходныйОрдерНаТоварыОтгружаемыеТовары.Номенклатура = ШтрихкодыНоменклатуры.Номенклатура
	               |			И РасходныйОрдерНаТоварыОтгружаемыеТовары.Упаковка = ШтрихкодыНоменклатуры.Упаковка
	               |ГДЕ
	               |	РасходныйОрдерНаТоварыОтгружаемыеТовары.Ссылка = &Ссылка
	               |	И РасходныйОрдерНаТоварыОтгружаемыеТовары.Действие <> ЗНАЧЕНИЕ(Перечисление.ДействияСоСтрокамиОрдеровНаОтгрузку.НеОтгружать)
	               |
	               |СГРУППИРОВАТЬ ПО
	               |	РасходныйОрдерНаТоварыОтгружаемыеТовары.Номенклатура,
	               |	РасходныйОрдерНаТоварыОтгружаемыеТовары.Серия,
	               |	РасходныйОрдерНаТоварыОтгружаемыеТовары.Упаковка,
	               //|	РасходныйОрдерНаТоварыОтгружаемыеТовары.НомерСтроки,
	               |	ВЫБОР
	               |		КОГДА ШтрихкодыНоменклатуры.Штрихкод <> """"
	               |			ТОГДА ШтрихкодыНоменклатуры.Штрихкод
	               |		ИНАЧЕ РасходныйОрдерНаТоварыОтгружаемыеТовары.Номенклатура.Код
	               |	КОНЕЦ";
	Запрос.УстановитьПараметр("Ссылка",СсылкаРО );
	
	Возврат Запрос.Выполнить().Выгрузить();
	
КонецФункции

	

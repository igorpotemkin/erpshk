	Если ПроверкаНаЧисло(Текст) = Истина Тогда
		ОткрытьФормуСообщения("Отсканируйте QR");
	Иначе
		Мас = Новый Массив;
		Если СтрНайти(Текст, ";") = 0 Тогда
			Если СокрЛП(Строка(Текст)) = СокрЛП(Строка(ЭтаФорма.Серия)) Тогда
				ОткрытьФормуФормаСканШК(Текст);

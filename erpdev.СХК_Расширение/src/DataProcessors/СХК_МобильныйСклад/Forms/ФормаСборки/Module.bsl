	Запрос.УстановитьПараметр("Остаток",1);  
	
	Рез = Запрос.Выполнить().Выбрать();
	
	Если Рез.Следующий() Тогда 
		Коэф = ПолучитьКоэф(ЭтаФорма.Номенклатура,Мас[1]); 
		Если ТипЗНЧ(Коэф.Числитель) = ТИП("Число") и Коэф.Числитель > 0 тогда

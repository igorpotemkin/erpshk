	ДСборки = ДокСборка.ПолучитьОбъект(); // ДокументСсылка.СХК_СписаниеЯчейки;	
	
	ОтборТПР = Новый Структура;
	ОтборТПР.Вставить("Номенклатура",Номенклатура);
	ОтборТПР.Вставить("Серия",Серия);
	ОтборТПР.Вставить("Упаковка",Упаковка);
